            <Button Name="Bird_Up" Margin="5,5,0,5" Content="˄" Width="20" Click="Bird_Up_Click" Height="19" />
            <Button Name="Bird_Down" Margin="0,5,0,5"  Content="˅" Width="20" Click="Bird_Down_Click" Height="19" />
        </StackPanel>

            <Button Name="Mouse_Down" Margin="0,5,0,5"  Content="˅" Width="20" Click="Mouse_Down_Click" Height="19" />
        </StackPanel>
        <StackPanel Orientation="Horizontal">
            <Label Name="Num_Snake"  Margin="5,5,0,5" Width="177" Content="Number of Snakes:"  />
